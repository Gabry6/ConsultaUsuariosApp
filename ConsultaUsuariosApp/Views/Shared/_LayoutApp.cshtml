<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Consulta de Usuarios</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-custom {
            background-color: #212121;
            border: none;
            margin-bottom: 0;   
        }

            .navbar-custom .navbar-brand {
                color: #fff;
                font-weight: bold;
                font-size: 24px;
            }

            .navbar-custom .navbar-nav > li > a {
                color: #fff;
            }

                .navbar-custom .navbar-nav > li > a:hover {
                    background-color: #424242;
                }

        .content-wrapper {
            padding: 30px 15px;
            min-height: calc(100vh - 100px);
        }

        .footer {
            background-color: #212121;
            color: #999;
            padding: 20px 0;
            text-align: center;
            margin-top: 30px;
        }

        .alert-custom {
            margin-top: 20px;
        }

        .user-info {
            color: #fff;
            padding: 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-custom">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de Usuarios", "Consulta", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Consulta", "Consulta", "User")</li>
                    <li>@Html.ActionLink("Nuevo Usuario", "Nuevo", "User")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UsuarioNombre"] != null)
                    {
                        <li class="user-info">
                            <span>Bienvenido, @Session["UsuarioNombre"]</span>
                        </li>
                    }
                    <li>@Html.ActionLink("Cerrar Sesión", "Logout", "CerrarSession")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid content-wrapper">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible alert-custom" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["Mensaje"]
            </div>
        }

        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Sistema de Consulta de Usuarios - C3 P3 PARCIAL 2025</p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
