@model ConsultaUsuariosApp.ViewModels.DeleteUserViewModel

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

<style>
    .page-header {
        background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
        color: #fff;
        padding: 30px;
        margin: -30px -15px 30px -15px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        animation: slideDown 0.6s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h2 {
        margin: 0;
        font-size: 28px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .delete-container {
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 0 auto;
        animation: zoomIn 0.6s ease-out;
    }

    @@keyframes zoomIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .alert-warning-custom {
        background: linear-gradient(135deg, #fff3cd 0%, #ffe5a1 100%);
        border: 2px solid #ffc107;
        color: #856404;
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.02);
        }
    }

    .alert-warning-custom i {
        font-size: 40px;
        color: #ffc107;
        animation: shake 1s ease-in-out infinite;
    }

    @@keyframes shake {
        0%, 100% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-5deg);
        }

        75% {
            transform: rotate(5deg);
        }
    }

    .alert-warning-custom h4 {
        margin: 0 0 10px 0;
        font-size: 18px;
        font-weight: 700;
    }

    .alert-warning-custom p {
        margin: 0;
        font-size: 14px;
    }

    .user-details {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        animation: slideUp 0.8s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .user-details h4 {
        margin: 0 0 20px 0;
        color: #333;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .detail-item {
        display: flex;
        padding: 15px 0;
        border-bottom: 1px solid #e0e0e0;
        animation: fadeIn 0.8s ease-out backwards;
    }

        .detail-item:nth-child(1) {
            animation-delay: 0.1s;
        }

        .detail-item:nth-child(2) {
            animation-delay: 0.2s;
        }

        .detail-item:nth-child(3) {
            animation-delay: 0.3s;
        }

        .detail-item:nth-child(4) {
            animation-delay: 0.4s;
        }

        .detail-item:nth-child(5) {
            animation-delay: 0.5s;
        }

        .detail-item:nth-child(6) {
            animation-delay: 0.6s;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .detail-item:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 700;
        color: #333;
        min-width: 150px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .detail-label i {
            color: #fc4a1a;
            font-size: 18px;
        }

    .detail-value {
        color: #555;
        flex: 1;
    }

    .badge-status {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-activo {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: #fff;
        box-shadow: 0 3px 10px rgba(17, 153, 142, 0.3);
    }

    .badge-inactivo {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: #fff;
        box-shadow: 0 3px 10px rgba(245, 87, 108, 0.3);
    }

    .btn-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        animation: bounceIn 1s ease-out;
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }

        50% {
            opacity: 1;
            transform: scale(1.05);
        }

        70% {
            transform: scale(0.9);
        }

        100% {
            transform: scale(1);
        }
    }

    .btn-eliminar {
        flex: 1;
        background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
        color: #fff;
        border: none;
        padding: 14px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(252, 74, 26, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-eliminar:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(252, 74, 26, 0.6);
        }

    .btn-cancelar {
        flex: 1;
        background: #6c757d;
        color: #fff;
        border: none;
        padding: 14px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-cancelar:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.5);
            background: #5a6268;
            color: #fff;
            text-decoration: none;
        }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h2>
            <i class="fas fa-user-times"></i>
            Eliminar Usuario
        </h2>
    </div>

    <div class="delete-container">
        <div class="alert-warning-custom">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <h4>⚠️ Advertencia</h4>
                <p>¿Está seguro que desea eliminar este usuario? Esta acción marcará el usuario como "BORRADO" y no podrá iniciar sesión.</p>
            </div>
        </div>

        <div class="user-details">
            <h4>
                <i class="fas fa-user-circle"></i>
                Detalles del Usuario
            </h4>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-hashtag"></i>
                    <span>ID:</span>
                </div>
                <div class="detail-value">
                    <strong>#@Model.ID</strong>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-user"></i>
                    <span>Nombre:</span>
                </div>
                <div class="detail-value">@Model.Nombre</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-id-badge"></i>
                    <span>Usuario:</span>
                </div>
                <div class="detail-value">@Model.Usuario</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-envelope"></i>
                    <span>Email:</span>
                </div>
                <div class="detail-value">@Model.Email</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-birthday-cake"></i>
                    <span>Edad:</span>
                </div>
                <div class="detail-value">@Model.Edad años</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-signal"></i>
                    <span>Estado Actual:</span>
                </div>
                <div class="detail-value">
                    @if (Model.Status == "ACTIVO")
                    {
                        <span class="badge-status badge-activo">
                            <i class="fas fa-check-circle"></i> @Model.Status
                        </span>
                    }
                    else
                    {
                        <span class="badge-status badge-inactivo">
                            <i class="fas fa-times-circle"></i> @Model.Status
                        </span>
                    }
                </div>
            </div>
        </div>

        @using (Html.BeginForm("Borrar", "User", FormMethod.Post, new { @id = "formBorrar" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id", Model.ID)

            <div class="btn-actions">
                <button type="submit" class="btn-eliminar">
                    <i class="fas fa-trash-alt"></i>
                    <span>Confirmar Eliminación</span>
                </button>
                @Html.ActionLink("Cancelar", "Consulta", "User", null, new { @class = "btn-cancelar" })
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Confirmación extra antes de eliminar
            $('#formBorrar').on('submit', function(e) {
                e.preventDefault();

                Swal.fire({
                    title: '¿Está completamente seguro?',
                    html: 'El usuario <strong>@Model.Usuario</strong> será marcado como BORRADO.<br>Esta acción cambiará su estado permanentemente.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#fc4a1a',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="fas fa-trash-alt"></i> Sí, eliminar',
                    cancelButtonText: '<i class="fas fa-times"></i> No, cancelar',
                    reverseButtons: true,
                    showClass: {
                        popup: 'animate__animated animate__shakeX'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Mostrar loading
                        Swal.fire({
                            title: 'Eliminando...',
                            html: 'Por favor espere',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        // Enviar el formulario
                        setTimeout(() => {
                            this.submit();
                        }, 1000);
                    }
                });
            });
        });
    </script>
}